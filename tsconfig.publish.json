{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/core/**/*",
    "src/hooks/**/*", 
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__tests__",
    "src/pages",
    "src/components",
    "src/vibenest"
  ]
}